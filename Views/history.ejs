<!doctype html>
<html lang="en">

<head>
    <title>Lịch sử mua hàng</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>

<style>
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    td {
        vertical-align: middle;
        text-align: center;
        padding: 8px;
        border: 1px solid #dee2e6;
    }

    th {
        vertical-align: middle;
        text-align: center;
        padding: 8px;
        border: 1px solid #dee2e6;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    thead {
        background-color: #212529;
        color: white;
    }

    tbody {
        background-color: #f8f9fa;
    }

    tbody tr:hover {
        background-color: #d3d9df;
    }

    /* Additional styles for outer table */
    .outer-table th,
    .outer-table td {
        padding: 12px;
    }

    .outer-table thead {
        background-color: #007bff;
        color: white;
    }

    .outer-table tbody {
        background-color: #fff;
    }

    .outer-table tbody tr:hover {
        background-color: #cce5ff;
    }

    #content__bottom table {
        margin-top: 20px;
        border: 1px solid #dee2e6;
    }

    #content__bottom th,
    #content__bottom td {
        padding: 12px;
        border: 1px solid #dee2e6;
    }

    #content__bottom thead {
        background-color: #212529;
        color: white;
    }

    #content__bottom tbody {
        background-color: #f8f9fa;
    }

    #content__bottom tbody tr:hover {
        background-color: #d3d9df;
    }
</style>



<body>
        
        <% function formatPrice(price){ %>
        <%    return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price); %>
        <%} %>
    
        <header>
            <nav class="navbar navbar-expand-lg fixed-top navbar-dark" style="background-color: black;">
                <div class="container">
                    <a class="navbar-brand logo" href="/"><span class="text-warning">SELL</span>PHONE</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <!-- <li class="nav-item">
                                <a class="nav-link" href="/">Nhân viên</a>
                            </li> -->
                            <li class="nav-item">
                                <a class="nav-link" href="/product">Sản phẩm</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/customer">Khách hàng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/report">Báo cáo</a>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nameUser" href="#" id="userEmail" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false" style="color: rgb(249, 249, 249);">
                                    <%= user.email %>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userEmail">
                                    <li id="profileUser">
                                        <a class="dropdown-item" href="/profile">Tài khoản</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" data-bs-toggle="modal"
                                            data-bs-target="#changePasswordModal">Đổi mật khẩu</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/logout">Đăng xuất</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    
    <div class="container" style="margin-top: 80px;">
        <h1 style="margin-top: 20px;">Lịch sử mua hàng</h1>
       
        <section id="content__bottom">
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <div class="card mb-4">
                            <table id="" class="table" style="text-align: center;">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nhân viên</th>
                                        <th>Khách hàng</th>
                                        <th>Tổng thanh toán</th>
                                        <th>Tiền nhận</th>
                                        <th>Tiền hoàn</th>
                                        <th>Ngày mua</th>
                                        <th>Chi tiết đơn hàng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (history) { %>
                                        <% for (let order of history)  {%>
                                            <tr>
                                                <td>
                                                    <% if (order.saleId) { %>
                                                      <%= order.saleId.fullName %>
                                                    <% } else { %>
                                                      <b>Nhân viên nghỉ làm</b>
                                                    <% } %>
                                                </td>
                                                <td><%= order.customerId.fullName %>
                                                        <br>
                                                    <%= order.customerId.phoneNumber %>
                                                        <br>
                                                    <%= order.customerId.address %>
                                                </td>
                                                <td><%= formatPrice(order.totalAmount) %></td>
                                                <td><%= formatPrice(order.moneyReceived) %></td>
                                                <td><%= formatPrice(order.moneyBack) %></td>
                                                <td><%= moment(order.purchaseDate).format("DD/MM/YYYY") %></td>
                                                <td>
                                                    <ul>
                                                    <% for (let product of order.products)  {%>
                                                        <% if (product.productId) { %>
                                                            <li><b>Tên Sản phẩm</b> : <%= product.productId.productName %> <br> <b>Số lượng</b> : <%= product.quantity %> <br> <b>Tổng</b> : <%= formatPrice(product.totalPrice) %> </li>
                                                          <% } else { %>
                                                            <b>Ngừng kinh doanh</b>
                                                          <% } %>
                                                        <hr>
                                                    <% } %>
                                                    </ul>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% }%>
                                    
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </main>
            </div>
        </section>
    </div>
    

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    
</body>

</html>